<div class="control-group">
  <%= form.label :foreground, class: "control-label" %>
  <div class="controls">
    <%= form.check_box :foreground %>
    tick this for the foreground app servers
  </div>
</div>

<div class="control-group">
  <%= form.label :background, class: "control-label" %>
  <div class="controls">
    <%= form.check_box :background %>
